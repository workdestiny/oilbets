{{define "modal-verify-email"}}
<div class="modal fade" id="verify-email" tabindex="-1" role="dialog" aria-labelledby="select-gap-label" aria-hidden="true">
	<div class="modal-dialog list-follow modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-body _pdh-10 _pdh-24-md _pdv-35">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
                </button>
                <div style="clear: both;"></div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <form>
                                <div class="form-group">
                                    <label class="_cl-gray-10">อีเมล</label>
                                    <input type="email"
                                    v-model="verify.email"
                                    class="form-control"
                                    :class="{'is-invalid': verifyErr.email}"
                                    autocomplete="new-password">
                                    <div v-if="verifyErr.email" class="invalid-feedback">${verifyErr.message}</div>
                                </div>
                                <div class="form-group">
                                    <label class="_cl-gray-10">รหัสผ่าน</label>
                                    <input type="password"
                                    v-model="verify.password"
                                    class="form-control"
                                    :class="{'is-invalid': verifyErr.password}"
                                    autocomplete="new-password">
                                    <div v-if="verifyErr.password" class="invalid-feedback">${verifyErr.message}</div>
                                </div>
                                <div class="form-group">
                                    <label class="_cl-gray-10">ยืนยันรหัสผ่าน</label>
                                    <input type="password"
                                    v-model="verify.repeatPassword"
                                    class="form-control"
                                    :class="{'is-invalid': verifyErr.password}"
                                    autocomplete="new-password">
                                    <div v-if="verifyErr.password" class="invalid-feedback">${verifyErr.message}</div>
                                </div>
                                <button type="button"
                                class="fs-14 btn sw-btn _bgcl-yellow-5 _bgcl-yellow-4-hover _fw-600 _cl-white _bdrd-5px"
                                @click="ajaxVerify">ยืนยัน</button>
                            </form>
                        </div>
                    </div>
                </div>
			</div>
		</div>
	</div>
</div>
{{end}}