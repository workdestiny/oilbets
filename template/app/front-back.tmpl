{{define "page.title"}}Richboxclub{{end}}

{{define "app-body"}}


<div class="container _mgt-20-md" id="panan-container">
	<div class="betwin alert alert-success fade _pst-f _l-0 _r-0 _mg-at _tal-ct fs-20" role="alert">
			<strong>คุณชนะ!</strong> <strong class="textwin">{{.Userbet.Price}}</strong>
			<button type="button" class="close" @click="closeAlertbet()">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div class="betlose alert alert-danger fade _pst-f _l-0 _r-0 _mg-at _tal-ct fs-20" role="alert" style="z-index: 1; width: 60%; margin-top: -10px !important;">
			<strong>คุณแพ้!</strong> <strong class="textlose"></strong>
			<button type="button" class="close" @click="closeAlertbet()">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div class="refill alert alert-warning fade _pst-f _l-0 _r-0 _mg-at _tal-ct fs-20" role="alert" style="z-index: 1; width: 60%; margin-top: -10px !important;">
			<strong>เงินไม่เพียงพอ กรุณาเติมเงิน</strong>
			<button type="button" class="close" @click="closeAlertbet()">
				<span aria-hidden="true">&times;</span>
			</button>
	</div>

	<div class="row">
		<div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
			<div class="row _fdrt-cl _bgcl-white _bdrd-2px _cl-gray-11 _pdbt-30">

				<div class="col-12 _pdt-20 _tal-ct">
					<img v-cloak v-if="showFrontback === ''" class="coin" src="https://storage.googleapis.com/powerwork-bucket/bet/frontback/coin-spin-Head-forever.gif" alt="coin">
					<img v-cloak v-if="showFrontback === true" class="coin" src="https://storage.googleapis.com/powerwork-bucket/bet/frontback/coin-spin-Head.gif" alt="coin">
					<img v-cloak v-if="showFrontback === false" class="coin" src="https://storage.googleapis.com/powerwork-bucket/bet/frontback/coin-spin-Tail.gif" alt="coin">

					<!-- <img width="300px" height="300px" src="../../resources/assets/image/coin-spin-Head.gif" alt=""> -->
				</div>
				<p class="_mgl-30 fs-24" style="font-weight: bold;">เลือกจำนวนเงิน</p>
				<div class="col-12 _tal-ct">

						<button class="btn coin20 item-topic-sm _mgt-5" @click="changeCoin(20, 'coin')" :disabled="isCoin === 20"> <i class="fas fa-coins _mgr-5" style="color: gold;" :disabled="isCoin === 20"></i> 20 coin</button>

						<button class="btn coin50 item-topic-sm _mgt-5" @click="changeCoin(50, 'coin')" :disabled="isCoin === 50"> <i class="fas fa-coins _mgr-5" style="color: gold;" :disabled="isCoin === 50"></i> 50 coin</button>

						<button class="btn coin100 item-topic-sm _mgt-5" @click="changeCoin(100, 'coin')" :disabled="isCoin === 100"> <i class="fas fa-coins _mgr-5" style="color: gold;" :disabled="isCoin === 100"></i> 100 coin</button>

						<button class="btn coin200 item-topic-sm _mgt-5" @click="changeCoin(200, 'coin')" :disabled="isCoin === 200"> <i class="fas fa-coins _mgr-5" style="color: gold;" :disabled="isCoin === 200"></i> 200 coin</button>

				</div>
				<p class="_mgl-30 _mgt-20 fs-24" style="font-weight: bold;">เลือกหน้าของเหรียญ</p>
				<div class="col-12 _dp-f _tal-ct">
					<div class="row _mg-at">
						<div>
							<button class="btn btnbet " @click="changeCoin(0, 'bet', true)" :disabled="coin === 0"> <img class="img-fluid" src="https://storage.googleapis.com/powerwork-bucket/bet/frontback/coin-front-3d.png" width="150px" height="100px" alt="หัว"></button>
							<p class="fs-16 _fw-700 _mgt-10">หัว</p>
						</div>
						<div>
							<button class="btn btnbet" @click="changeCoin(0, 'bet', false)" :disabled="coin === 0"> <img class="img-fluid" src="https://storage.googleapis.com/powerwork-bucket/bet/frontback/coin-back-3d.png" width="150px" height="100px" alt="ก้อย"></button>
							<p class="fs-16 _fw-700 _mgt-10">ก้อย</p>
						</div>
					</div>
				</div>

				<div class="container">
						<div id="">
							<h2 class="_tal-ct _mgt-20 _mgbt-20 fs-20 fs-30-md">รายชื่อผู้โชคดี</h2>
							<table class="_mg-at col-11 table _tal-ct" cellspacing="0">
								<tr>
									<th class="fs-10 fs-18-md _pd-5">username</th>
									<th class="fs-10 fs-18-md _pd-5">ราคา</th>
									<th class="fs-10 fs-18-md _pd-5">ได้ / เสีย</th>
									<th class="fs-10 fs-18-md _pd-5">หัว / ก้อย</th>
								</tr>
							{{range .UsersBet}}
								<tr>
									<td class="fs-10 fs-18-md">{{.FirstName}} {{.LastName}}</td>
									<td class="fs-10 fs-18-md">{{.Price}}</td>
									<td class="fs-10 fs-18-md">{{.StatusText}}</td>
									<td class="fs-10 fs-18-md">{{.FrontbackText}}</td>
								</tr>
							{{ end }}
							</table>
						</div>
				</div>

			</div>
		</div>
	</div>
</div>
{{end}}

{{define "main.style"}}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.3/assets/owl.carousel.min.css">

{{end}}

{{define "main.script"}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.3/owl.carousel.min.js"></script>
<script async src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.0/sweetalert.min.js"></script>

{{end}}
