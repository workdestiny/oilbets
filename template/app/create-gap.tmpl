{{define "page.title"}}สร้างเพจ{{end}}

{{define "app-body"}}
	<div id="app" class="container">
		<div class="row _mgt-30 _mgt-200-md">
			<div class="col-12 _dp-f _jtfct-ct">
				<div class="_dp-f _jtfct-ct create-gap">
					<div class="banner _pd-25 _dp-n _dp-f-md _fdrt-cl">
						<h1 class="fs-24 _fw-700 _cl-yellow-2" style="text-shadow: 0 2px 4px #3632204b;">เปิดพื้นที่สู่โลกครีเอทีฟ</h1>
						<h3 class="fs-14 _cl-gray-4" style="text-shadow: 0 2px 4px #00000045;line-height: 2.14;">อย่าเก็บ<span class="fs-20 _cl-gray-2">ไอเดีย</span>ไว้คนเดียวให้เสียเปล่า นำมาแชร์กับเพื่อนๆกันดีกว่า!!</h3>
						<p class="fs-14 _cl-gray-4 _pdl-10 _mgt-at" style="border-left: solid 2px #e7d715;">
							มาสนุกกับการสร้างสรรค์คอนเทนต์
							ที่เกิดได้จากหลากหลายไอเดียในตัวคุณ
						</p>
					</div>
					<form class="form _pdh-20 _pdv-20 _pdh-65-md _pdv-30-md _bgcl-white" method="POST">
						<h4 class="fs-16 _cl-gray-11 _fw-700 _tal-ct _mgbt-20">สร้างพื้นที่เพจโดยไม่เสียค่าบริการ</h4>
						<div class="form-group">
							<small class="form-text _cl-gray-8 fs-12 _mgt-0 _mgbt-10">กรอกข้อมูลด้านล่าง</small>
							<input type="text" class="form-control {{if .Flash.Has "ErrName"}}is-invalid{{end}}" name="name" value="{{.Flash.Get "NameGap"}}" placeholder="ชื่อเพจ" required>
							<div class="invalid-feedback">{{.Flash.Get "ErrName"}}</div>
						</div>
						<div class="form-group">
							<input type="text" class="form-control {{if .Flash.Has "ErrBio"}}is-invalid{{end}}" name="bio" value="{{.Flash.Get "Bio"}}" placeholder="คำอธิบายเพจ" required>
							<div class="invalid-feedback">{{.Flash.Get "ErrBio"}}</div>
						</div>
						<div class="form-group">
							<select class="form-control _cl-gray-11" name="topic-id" required>
								<option value="">ประเภทเพจ</option>
								{{range .Topic}}
								<option value="{{.ID}}" :selected="topicID === '{{.ID}}'">{{.Name}}</option>
								{{end}}
								<option value="">ไม่ระบุ</option>
							</select>
						</div>
						<div id="gtm-link" data-gtm-link="create_gap">
							<button class="btn sw-btn _bgcl-yellow-5 _fw-600 _cl-white _bdrd-5px _w-100pct _h-40 _mgt-20 _mgbt-25">สร้างเพจ</button>
						</div>
						<small class="form-text _cl-gray-8 fs-12">
								อ่าน <a href="{{route "condition"}}" target="_bank">ข้อกำหนดและเงื่อนไข</a> ในการใช้บริการ
						</small>
					</form>
				</div>
			</div>
		</div>
	</div>
{{end}}

{{define "main.script"}}
<script>
new Vue({
	el: '#app',
	data() {
		return {
			topicID: '{{.Flash.Get "TopicID"}}'
		}
	}
})
</script>
{{end}}