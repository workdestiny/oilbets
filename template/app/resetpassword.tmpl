{{define "page.title"}}เปลี่ยนรหัสผ่าน{{end}}

{{define "app-body"}}
	<div class="container-sign _bg-si">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 offset-sm-0 col-md-10 offset-md-1 col-lg-5 offset-lg-6 col-xl-5 offset-xl-6 _dp-f _fdrt-cl _alit-ct">
					<h1 class="_tal-ct fs-24 _mgbt-30">เปลี่ยนรหัสผ่าน</h1>
					<div class="signin_box _pd-30 _pdh-70-lg _pdv-50-lg _pdh-100-lg">
						<span class="_cl-gray-8">เปลี่ยนรหัสผ่าน</span>
						<form class="_mgt-10" method="POST" autocomplete="off">
							<div class="form-group">
								<input class="form-control" name="password" type="password" placeholder="รหัสผ่าน" required>
							</div>
							<div class="form-group">
								<input class="form-control" name="repeat-password" type="password" placeholder="ยืนยันรหัสผ่าน" required>
							</div>
							{{if .Flash.Has "Errors"}}
							<div class="form-group">
								<label class="form-check-label _cl-negative">
									{{.Flash.Get "Errors"}}
								</label>
							</div>
							{{end}}
							<button class="btn sw-btn-primary btn-block btn-lg fs-18" type="submit">เปลี่ยนรหัสผ่าน</button>
							<a class="sign-social fs-14 _tal-ct _dp-b _mgt-25" href="{{route "signin"}}">กลับไปเข้าสู่ระบบ</a>
						</form>
					</div>
				</div>
			</div>
		</div>

		<div class="container">
			<div class="word _dp-n _dp-b-lg">
				<h3 class="fs-20 fs-28-lg fs-36-xl">Let's publish your own idea.</h3>
				<h4 class="fs-14 fs-18-xl _cl-gray-6">“มาร่วมสร้างสรรค์ไอเดียและเปิดให้ทุกคนได้รู้จักคุณ”</h3>
			</div>
		</div>

	</div>
{{end}}

{{define "main.script"}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.0/sweetalert.min.js"></script>
{{if .Flash.Has "Success"}}
<script>
	swal({
		title: "เปลี่ยนรหัสผ่าน",
		text: {{.Flash.Get "Success"}},
		icon: "success",
	}).then((value) => {
		if (value) {
			window.location.href = {{route "signin"}};
			return
		}
	});
</script>
{{end}}
{{end}}

